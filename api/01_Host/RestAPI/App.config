<?xml version="1.0"?>
<configuration>

  <configSections>
    <section name="log4net" type="System.Configuration.IgnoreSectionHandler"/>
  </configSections>
  
  <log4net>

    <!--信息日志-->
    <appender name="InfoLog" type="log4net.Appender.RollingFileAppender,log4net">      
      <file value="D:\Private\Info_"/> <!--保存路径-->
      <appendToFile value="true"/><!--追加到现有文件-->
      <rollingStyle value="Date"/>
      <datePattern value="yyyyMMdd&quot;.log&quot;"/><!--动态时间格式的文件名-->
      <staticLogFileName value="false"/><!--关闭固定命令-->   
      <layout type="log4net.Layout.PatternLayout"><!--输出内容格式-->
        <conversionPattern value="[时间]：%date %n[线程]：%thread %n[来源]：%logger property:[%property{NDC}] %n[描述]：%message%newline"/>
        <Header value="
"/>
      </layout>     
      <filter type="log4net.Filter.LevelRangeFilter">
        <LevelMin value="INFO"/>
        <LevelMax value="INFO"/>
      </filter>    
    </appender>

    <!--错误日志-->
    <appender name="ErrorLog" type="log4net.Appender.RollingFileAppender,log4net">
      <file value="D:\Private\Error_"/>
      <appendToFile value="true"/>
      <RollingStyle value="Date"/>
      <datePattern value="yyyyMMdd&quot;.log&quot;"/>
      <StaticLogFileName value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[时间]：%date %n[线程]：%thread %n[来源]：%logger property:[%property{NDC}] %n[描述]：%message%newline"/>
        <Header value="
"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <LevelMin value="ERROR"/>
        <LevelMax value="ERROR"/>
      </filter>
    </appender>

    <!--警告日志-->
    <appender name="WarnLog" type="log4net.Appender.RollingFileAppender,log4net">
      <file value="D:\Private\Warn_"/>
      <appendToFile value="true"/>
      <RollingStyle value="Date"/>
      <datePattern value="yyyyMMdd&quot;.log&quot;"/>
      <StaticLogFileName value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[时间]：%date %n[线程]：%thread %n[来源]：%logger property:[%property{NDC}] %n[描述]：%message%newline"/>
        <Header value="
"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <LevelMin value="WARN"/>
        <LevelMax value="WARN"/>
      </filter>
    </appender>

    <!--Debug日志-->
    <appender name="DebugLog" type="log4net.Appender.RollingFileAppender,log4net">
      <file value="D:\Private\Debug_"/>
      <appendToFile value="true"/>
      <RollingStyle value="Date"/>
      <datePattern value="yyyyMMdd&quot;.log&quot;"/>
      <StaticLogFileName value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[时间]：%date %n[线程]：%thread %n[来源]：%logger property:[%property{NDC}] %n[描述]：%message%newline"/>
        <Header value="
"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <LevelMin value="DEBUG"/>
        <LevelMax value="DEBUG"/>
      </filter>
    </appender>

    <!--定义输出到控制台命令行中-->
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[时间]：%date %n[线程]：%thread %n[来源]：%logger property:[%property{NDC}] %n[描述]：%message%newline"/>
      </layout>
    </appender>


    <!--定义日志的输出方式-->
    <root>
      <appender-ref ref="InfoLog"/>
      <appender-ref ref="ErrorLog"/>
      <appender-ref ref="WarnLog"/>
      <appender-ref ref="DebugLog"/>
      <!--<appender-ref ref="ConsoleAppender" />-->     
    </root>

  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>

  <appSettings>
    <add key="DEFINED_CONFIG_PATH" value="D:\Private"/>
    <add key="CACHE_KEEP_TIME" value="600"/>
    <add key="MEMORY_CACHE_NAMESPACE" value="BF.Core.Cache.MemoryCache"/>
    <add key="XML_CONFIG_NAMESPACE" value="BF.Core.Config.XmlConfig"/>
    <add key="ERROR_lOG_NAMESPACE" value="BF.Core.Log.ErrorLog"/>
    <add key="INFO_LOG_NAMESPACE" value="BF.Core.Log.InfoLog"/>
    <add key="DEBUG_LOG_NAMESPACE" value="BF.Core.Log.DebugLog"/>
    <add key="WARM_LOG_NAMESPACE" value="BF.Core.Log.WarnLog"/>
  </appSettings>
  
</configuration>
